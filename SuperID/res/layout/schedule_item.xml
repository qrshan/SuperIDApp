<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/schedule_item_action_time"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.18"
        android:gravity="center"
        android:textColor="@color/calendar_text_active"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/schedule_item_content"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.56"
        android:gravity="center_vertical"
        android:paddingBottom="5dip"
        android:paddingTop="5dip"
        android:textColor="@color/dark_grey_text"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:padding="5dip"
        android:orientation="vertical" >

        <ToggleButton
            android:id="@+id/schedule_item_alarm_icon"
            android:layout_width="26dip"
            android:layout_height="26dip"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dip"
            android:background="@drawable/alarm_switch"
            android:textOff=""
            android:textOn="" />

        <TextView
            android:id="@+id/schedule_item_alarm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/alarm_text_inactive"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>