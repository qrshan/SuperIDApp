<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="SimuActivityStyle" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:homeAsUpIndicator">@drawable/return_to_main</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:icon">@drawable/m</item>
    </style>
    
    <style name="SettingsActivityStyle" parent="@style/SimuActivityStyle">
        <item name="android:icon">@drawable/ic_settings_white</item>
    </style>

    <style name="Widget.Styled.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_bg</item>
        <item name="android:displayOptions">homeAsUp|showHome|showTitle</item>
        <item name="displayOptions">homeAsUp|showHome|showTitle</item>
    </style>

    <style name="MainActivityStyle" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:homeAsUpIndicator">@drawable/option</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar.Main</item>
    </style>

    <style name="Widget.Styled.ActionBar.Main" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_bg</item>
        <item name="android:displayOptions">homeAsUp|showHome|showTitle</item>
        <item name="displayOptions">homeAsUp|showHome|showTitle</item>
        <item name="android:icon">@drawable/m</item>
    </style>

    <style name="MenuDrawer" />

    <style name="MenuDrawer.Widget" />

    <style name="MenuDrawer.Widget.Title">
        <item name="android:background">@drawable/slidingmenu_item_bg</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textColor">@color/sidebar_text_dark</item>
        <item name="android:textSize">17sp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8.0dip</item>
        <item name="android:paddingTop">0.5dip</item>
        <item name="android:paddingRight">16.0dip</item>
        <item name="android:paddingBottom">0.5dip</item>
    </style>
    
    <style name="Text">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/selector_text</item>
    </style>
    
    <style name="DropShadow" parent="@style/Text">
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    
    <style name="LVHeader" parent="@style/DropShadow">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/header_container</item>
        <item name="android:paddingLeft">12.0dip</item>
        <item name="android:paddingTop">10.0dip</item>
        <item name="android:paddingRight">4.0dip</item>
        <item name="android:paddingBottom">10.0dip</item>
    </style>
    
    <style name="LVClickable" parent="@style/DropShadow">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left|center</item>
        <item name="android:background">@drawable/btn_lvclickable</item>
        <item name="android:paddingLeft">16.0dip</item>
        <item name="android:paddingRight">8.0dip</item>
        <item name="android:layout_height">48.0dip</item>
        <item name="android:layout_margin">0.0dip</item>
        <item name="android:minHeight">48.0dip</item>
    </style>
    
    <style name="LVStub" parent="@style/Text">
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">16.0dip</item>
        <item name="android:paddingTop">10.0dip</item>
        <item name="android:paddingRight">4.0dip</item>
        <item name="android:paddingBottom">10.0dip</item>
    </style>
    
    <style name="SuperIDEditText" parent="@style/Text">
        <item name="android:background">@drawable/input_field1</item>
        <item name="android:textColorHint">@color/text_light</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14.0sp</item>
        <item name="android:paddingTop">12.0dip</item>
        <item name="android:paddingBottom">12.0dip</item>
        <item name="android:paddingLeft">8.0dip</item>
    </style>
    
    <style name="BtnTextView">
        <item name="android:linksClickable">true</item>
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@color/btn_text_selector</item>
    </style>

</resources>